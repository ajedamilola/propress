<%- include("header") %>
<% if (page=="home") { %>
    <title>Mongo DB powered blog</title>
    <h3 class="display-4 jumbotron text-center">
        Blog Articles
    </h3>
    <div class="page-contents container">
        <br>
        <% var maxBlogContent=4; %>
        <div class="row blog-post">

            <% for( let i = 0; i < blogs.length; i++ ) { %>
                <div class="col col-lg-6 col-12 border-right">
                    <article tag="multile-articles">
                        <!--title of blog row-->
                        <div class="row top-row-home-article">
                            <div class="col col-6 blog-header" tag="blog-image-container">
                                <h1 class="post-title"><a href="/post/<%- blogs[i].Link %>"><%= blogs[i].Title %> </h1></a>
                            </div>
                            <div class="col col-6 blog-header" style="text-align: right !important;" tag="blog-image-container">
                                <img src="postImages/<%- blogs[i].Link %>.jpg" alt="post on <%= blogs[i].Title %>,<%= blogs[i].Title %>" class="image blog-image">
                            </div><br>
                        </div>
                        <!--main blog article-->
                        <p tag="post-content">
                            <%= blogs[i].Content.slice(0,100); %>....
                        </p><a href="post/<%= blogs[i].Link %>" style="font-size: small;">Read All</a><br>
                        <cite style="float: left;"><%- blogs[i].Category; %></cite>
                        <cite style="float: right;">-<%- blogs[i].Author; %> </cite>
                    </article>
                </div>
                <% if (i==maxBlogContent-1) { %>
                    <% break; %> 
                <% } %>

            <% } %>

        </div>

    </div>

<% }else if(page=="a_blog"){ %>
       <%  blogs.forEach(blog => { %>
           <%  if(blog.Link==pageName){ %>
                <title>
                    <%= blog.Title %> 
                </title>
                <h3 class="display-4 jumbotron text-center">
                    <%= blog.Title %> 
                </h3>
                <div class="container d-block">
                    <article class="single-blog-post">
                        <p class="single-blog-post-text"><%= blog.Content %> </p>
                        <cite style="float: left !important;" >
                            By: <%= blog.Author %> 
                        </cite>
                        <cite style="float: right;">
                            Category: <%= blog.Category %> 
                        </cite>
                    </article>
                    <br>
                    <div class="suggestion">
                        See more Post under this category
                    </div>
                </div>

            <% } %>
        <% }); %> 
<% } %> 
<%- include("footer"); %>